package neoStoxUtilityClasses;

import java.io.File;
import java.io.IOException;
import java.time.Duration;

import org.apache.poi.EncryptedDocumentException;
import org.apache.poi.ss.usermodel.Sheet;
import org.apache.poi.ss.usermodel.WorkbookFactory;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.io.FileHandler;
import org.testng.Reporter;


public class utility 
{
   //wait
	//exel
	//screenshot
	//scrollintoview
	public static String readDataFromEXel(int row,int cell) throws EncryptedDocumentException, IOException
	{
		File myFile= new File("D:\\\\selenium-java-4.5.3 (1)\\\\seleniumworksheet.xlsx");
		Sheet mysheet = WorkbookFactory.create(myFile).getSheet("Sheet4");
		String value = mysheet.getRow(row).getCell(cell).getStringCellValue();
		Reporter.log("reading data from row"+row+"from cell"+cell, true);
		Reporter.log("valueis"+value, true);
		return value;
	}
	public static void implisitWait(int time,WebDriver driver)
	{
		driver.manage().timeouts().implicitlyWait(Duration.ofMillis(time));
		Reporter.log("waiting for time"+time+"ms", true);
		
	}
	
	public static void takeScreenshot(WebDriver driver,String fileName) throws IOException
	{
	File src = ((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
	File dest= new File("D:\\\\selenium-java-4.5.3 (1)\\screenshot\\"+fileName+".png");
	FileHandler.copy(src, dest);
	Reporter.log("taking screen ",true);
	Reporter.log("screen shot taken as ans saved as"+dest, true);
	}

	public static void scrollIntoView( WebDriver driver,WebElement element)
	{
		JavascriptExecutor js = (JavascriptExecutor)driver;
		js.executeScript("argument[0].scrollintoview(true)",element);
		Reporter.log("scroll in to view "+element, false);
		
	}
	
}